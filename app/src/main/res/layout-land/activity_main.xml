<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B5A1E"
    android:backgroundTint="#F1014F"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3sp"
        android:layout_marginEnd="3sp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:orientation="horizontal"
        android:padding="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="30sp"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="?attr/android:colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="uma bomba de gasolina ilustrando o app"
                android:paddingVertical="10sp"
                android:textAlignment="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <Switch
                android:id="@+id/swPercentual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="30sp"
                android:minHeight="48sp"
                android:text="0.7" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etGasolina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:ems="10"
                android:hint="@string/price_gas"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etAlcool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginBottom="20sp"
                android:ems="10"
                android:hint="@string/price_alcohol"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="05sp"
                android:backgroundTint="#F1014F"
                android:text="@string/button_text"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:textSize="25sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>